// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["boby"]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@schema("boby")
}

model Branch {
  id        String     @id @default(cuid())
  name      String
  address   String
  type      String     // ATM, Branch, Payment Terminal
  services  String?
  latitude  Float
  longitude Float
  qrCode    String?    @unique
  users     User[]
  feedbacks Feedback[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([type])
  @@schema("boby")
}

model Feedback {
  id         String         @id @default(cuid())
  branchId   String
  branch     Branch         @relation(fields: [branchId], references: [id], onDelete: Cascade)
  rating     Int            // 1-5 stars
  category   String         // Service, Cleanliness, Speed, etc.
  comment    String?
  files      FeedbackFile[]
  customerName String?
  customerEmail String?
  customerPhone String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  @@index([branchId])
  @@index([createdAt])
  @@index([rating])
  @@schema("boby")
}

model FeedbackFile {
  id         String   @id @default(cuid())
  feedbackId String
  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
  filename   String
  filepath   String
  mimetype   String
  size       Int
  createdAt  DateTime @default(now())

  @@index([feedbackId])
  @@schema("boby")
}

enum Role {
  ADMIN
  USER
  @@schema("boby")
}
